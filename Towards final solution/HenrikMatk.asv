format long g

d1 = 500;
d2 = -500;
d3 = 500;
d4 = -500;

distance1 = 800;
distance2 = 300;
distance3 = 10;
distance4 = 100;

d12 = abs(d1) + abs(d2);
d34 = abs(d3) + abs(d4);

a12 = (distance1^2 - distance2^2) / (2 * d12^2) + 1/2;
a34 = (distance3^2 - distance4^2) / (2 * d34^2) + 1/2;

xx = d12 * (2 * a12 - 1);
xy = d34 * (2 * a34 - 1);

xcm = xx/10;